<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.ksanstone.wavesync.wavesync.gui.controller.PresetImportExport">
    <children>
        <VBox AnchorPane.bottomAnchor="5" AnchorPane.leftAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5">
            <TabPane layoutX="25.0" layoutY="25.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                <tabs>
                    <Tab closable="false" text="Import">
                        <content>
                            <VBox spacing="5.0">
                                <children>
                                    <TextField fx:id="importedLayoutName" prefHeight="25.0" prefWidth="325.0" promptText="Preset name" />
                                    <TextArea fx:id="layoutInputField" prefHeight="100.0" prefWidth="200.0" promptText="Paste layout code here." wrapText="true" VBox.vgrow="SOMETIMES" />
                           <Label fx:id="importErrorMessage" styleClass="danger" />
                                </children>
                                <padding>
                                    <Insets top="5.0" />
                                </padding>
                            </VBox>
                        </content>
                    </Tab>
                    <Tab closable="false" text="Export">
                        <content>
                            <VBox spacing="5.0">
                                <children>
                                    <TextArea fx:id="exportedLayoutField" editable="false" prefHeight="100.0" prefWidth="200.0" promptText="Exported layout json" wrapText="true" VBox.vgrow="SOMETIMES" />
                                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                                        <children>
                                            <Label text="Layout to export" />
                                            <ChoiceBox fx:id="exportChooser">
                                            </ChoiceBox>
                                        </children>
                                    </HBox>
                                </children>
                                <padding>
                                    <Insets top="5.0" />
                                </padding>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
            <ButtonBar layoutX="138.0" layoutY="346.0" prefHeight="40.0" prefWidth="453.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0">
                <buttons>
                    <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
                    <Button defaultButton="true" mnemonicParsing="false" onAction="#create" text="Import" />
                </buttons>
            </ButtonBar>
        </VBox>
    </children>
</AnchorPane>
